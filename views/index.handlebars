<div class="container my-4">
  <div class="row ">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto ">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title text-center">你想對誰說幹話</h5>
          </hr>
          <form method="POST" action="/">
            <div class="row mx-1">
              {{#each data}}
              <div class=" col-12 col-sm-4">
                <div class="card align-items-center">
                  <div class="img-cover">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.character}}">
                  </div>
                  <div class="card-body">
                    <div class="custom-control custom-radio">
                      <input class="form-check-input" type="radio" name="target" id="{{this.character_e}}"
                        value="{{this.character_e}}">
                      <label class="form-check-label" for="entrepreneur">{{this.character}}</label>
                    </div>
                  </div>
                </div>
              </div>
              {{/each}}
              <div class="col-sm-12">
                <div class="row ">
                  <div class="col-sm-2 mt-3">
                    <button type="submit" class="btn btn-primary">講幹話</button>
                  </div>
                  <div class="col-sm-10 mt-3">
                    <div class="card p-2" style="height: 120px;">{{#if bullshit}}{{bullshit}}{{/if}}</div>
                  </div>
                </div>
              </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>